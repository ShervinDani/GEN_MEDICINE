<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lblue"
    tools:context=".SignUp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="125dp"
        android:background="@drawable/bg">

        <TextView
            android:id="@+id/sg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:text="SignUp"
            android:textAlignment="center"
            android:textColor="@color/lblue"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name:"
            android:layout_marginStart="10dp"
            android:layout_below="@id/sg1"
            android:layout_marginTop="40dp"
            android:textSize="16sp"
            />
        <EditText
            android:id="@+id/ename"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter Full Name"
            android:layout_below="@id/name"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:background="@drawable/border"/>
        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-mail:"
            android:layout_marginStart="10dp"
            android:layout_below="@id/ename"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            />
        <EditText
            android:id="@+id/eemail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter E-mail"
            android:layout_below="@id/email"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:background="@drawable/border"/>
        <TextView
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:layout_marginStart="10dp"
            android:layout_below="@id/eemail"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            />
        <EditText
            android:id="@+id/epassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter a password"
            android:layout_below="@id/password"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:background="@drawable/border"/>
        <TextView
            android:id="@+id/cpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Password:"
            android:layout_marginStart="10dp"
            android:layout_below="@id/epassword"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            />
        <EditText
            android:id="@+id/ecpassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter password"
            android:layout_below="@id/cpassword"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:background="@drawable/border"/>

        <Button
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cpassword"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="119dp"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/lblue"
            android:text="SignUp"
            android:textColor="@color/dblue"
            android:textSize="20sp" />
    </RelativeLayout>
    </ScrollView>